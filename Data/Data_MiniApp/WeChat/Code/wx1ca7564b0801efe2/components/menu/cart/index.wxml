<view class="cart-wrapper {{showCartPanel?'mini-cart-unfolding':''}} {{mustDishPanelStatus===MUSTDISH_PANEL_STATUS.CLOSE?'':'must-dish-panel-unfolding'}} {{customClass}}" hidden="{{!cartVisible}}" wx:if="{{bottomTipsInfo.showCartBottom}}">
    <view hidden="{{isShowAddOn}}">
        <yellow-strip bind:checkedBuyFree="checkedBuyFree" cartCount="{{totalInfo.cartCount}}" isDishDetail="{{isDishDetail}}" needBuyFreeBtn="{{needBuyFreeBtn}}" options="{{options}}" showCartPanel="{{showCartPanel}}" wx:if="{{!hasPageError}}">{{totalInfo}}</yellow-strip>
        <mini-cart avatarPicsData="{{avatarPicsData}}" bind:checkedBuyFree="checkedBuyFree" customClass="{{customClass}}" isShowBigBtn="{{isShowBigBtn}}" needBuyFreeBtn="{{needBuyFreeBtn}}" newCartDishList="{{sortRenderList}}" wx:if="{{showCartPanel&&!hasPageError}}"></mini-cart>
    </view>
    <cart-bar bind:addStableMust="addStableMustFunc" bind:check="check" bind:closeCart="closeCartFunc" bind:closeMustDish="closeMustPanel" bind:get="getRecommend" bind:mustDishPostOrder="gotoMustDishPostOrder" bind:openCart="openCartFunc" bind:setCartBarShowState="setCartBarShowState" bind:toggleCartAndMustDish="toggleCartAndMustDishFunc" bind:toggleRegisterPanelFn="toggleRegisterPanelFunc" cartCount="{{totalInfo.cartCount}}" cartItemPrice="{{cartItemPrice}}" cartPriceInfo="{{cartPriceInfo}}" cartToast="{{cartToast}}" cartToastInfo="{{cartToastInfo}}" customClass="{{customClass}}" deliveryInfo="{{deliveryInfo}}" discountAmount="{{discountAmount}}" hasPageError="{{hasPageError}}" hideCartBarWhenEmpty="{{hideCartBarWhenEmpty}}" isMustDishEnough="{{isMustDishEnough}}" mustDishPanelStatus="{{mustDishPanelStatus}}" options="{{options}}" pageFrom="{{pageFrom}}" posOrderId="{{posOrderId}}" shopConfig="{{shopConfig}}" showCartPanel="{{isShowAddOn?false:showCartPanel}}" userSelectedAddress="{{userSelectedAddress}}" wx:if="{{!hasPageError}}"></cart-bar>
</view>
<view wx:else>
    <tips-banner bind:tapTipsBannerButton="tapTipsBannerButtonFunc" buttonText="{{bottomTipsInfo.buttonText}}" timePeriod="{{bottomTipsInfo.timePeriod}}" tipMessage="{{bottomTipsInfo.tipMessage}}" tipsBannerFixedBottom="{{tipsBannerFixedBottom}}"></tips-banner>
</view>
