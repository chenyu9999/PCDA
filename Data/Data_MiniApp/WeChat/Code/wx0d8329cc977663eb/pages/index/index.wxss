.userinfo {
    width: 100%;
}

.swiper {
    height: 400rpx;
    width: 100%;
}

.swiper image {
    height: 100%;
    width: 100%;
}

.active {
    color: #fff;
    font-size: 1.1em;
    background-color: #6CB7F4;
    border: 1px solid #6CB7F4;
}

.catalog_item {
    width: 48%;
    float: left;
    text-align: center;
    line-height: 34px;
}

.news {
    margin-top: 10px;
}

.actitle {
    width: 180px;
    font-size: 26rpx;
    font-weight: bold;
    float: left;
    overflow: hidden;
    text-overflow: ellipsis;
    display: block;
    white-space: nowrap;
    -webkit-box-orient: vertical;
    height: 25px;
}

.actext {
    flex-direction: column;
    float: right;
    color: #6b6b6b;
    font-size: 24rpx;
    width: 170px;
    height: 25px;
    overflow: hidden;
    text-overflow: ellipsis;
    display: block;
    white-space: nowrap;
    -webkit-box-orient: vertical;
}

.user-motto {
    margin-left: 60%;
    width: 200px;
}

.imgfocus {
    position: relative;
    height: 200px;
    background: #f1f1f1;
    width: 100%;
    display: block;
}

.imgfocus .imgbox {
    position: absolute;
    left: 0px;
    top: 0px;
}

.decoimg_b2 {
    position: relative;
    width: 100%;
    float: left;
    text-align: center;
    display: block;
    height: 165px;
}

.button {
    width: 150rpx;
    display: inline-block;
    font-size: 28rpx;
    height: 1.3rem;
    line-height: 1.3rem;
    padding: 5rpx;
    text-align: center;
    vertical-align: top;
    color: #fff;
    border-radius: 20px;
    margin: 0 10rpx 0 30rpx;
    background-color: #6CB7F4;
}

.user_title {
    width: 100%;
    display: flex;
    flex-direction: row;
    flex-wrap: wrap;
    justify-content: center;
    background-color: #f5f5f5;
    color: #aaa;
}

.mid {
    width: 100%;
    height: 100px;
    margin-top: 25px;
}

.mid01 {
    width: 18%;
    margin-left: 10%;
    height: 80px;
    float: left;
}

.myact {
    width: 50px;
    height: 50px;
}

.mid02 {
    width: 18%;
    margin-left: 4%;
    height: 80px;
    float: left;
}

.mid03 {
    width: 18%;
    margin-left: 4%;
    height: 80px;
    float: left;
}

.mid04 {
    width: 18%;
    margin-right: 6%;
    height: 80px;
    float: right;
}

.activityRow {
    margin: 15rpx;
    width: 660rpx;
    border: 1px solid #d2d2d2;
    background: #ffffff;
    padding: 18rpx 30rpx 10rpx 20rpx;
    font-size: 16px;
    border-radius: 5px;
}

.activityName {
    font-size: 30rpx;
    margin-bottom: 10rpx;
    vertical-align: top;
    color: #6CB7F4;
    font-weight: bold;
}

.activityIntroduce {
    color: #333;
    font-size: 25rpx;
    display: -webkit-box;
    -webkit-box-orient: vertical;
    -webkit-line-clamp: 2;
    overflow: hidden;
}

.startTime {
    width: 50%;
    display: inline-block;
    text-align: right;
    color: #a2a2a2;
    font-size: 23rpx;
}

.place {
    width: 50%;
    display: inline-block;
    text-align: laft;
    color: #a2a2a2;
    font-size: 23rpx;
}

.noMsg {
    width: 690rpx;
    padding: 30rpx;
    text-align: center;
}

.searchView {
    position: relative;
}

.searchInput {
    margin: 15rpx;
    border: 5rpx solid #fff;
    background: #fff;
    border-radius: 5px;
    padding: 10rpx 20rpx 10rpx 60rpx;
    font-size: 18px;
}

.searchImg {
    width: 40rpx;
    height: 38rpx;
    position: absolute;
    left: 28rpx;
    top: 20rpx;
}